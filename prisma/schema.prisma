generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id             Int              @id @default(autoincrement())
  date           DateTime
  city           String
  name           String
  type           String
  description    String
  bundle         bundle_products[]
}

model bundle {
  id         Int       @id @default(autoincrement())
  bundle_products     bundle_products[]
}

model bundle_products {
  bundle    bundle @relation(fields: [bundleId], references: [id])
  bundleId  Int
  product   products @relation(fields: [productId], references: [id])
  productId Int

  @@id([bundleId, productId])
}

model card {
  id               Int    @id @default(autoincrement())
  user             String
  productIds       Int[]
  bundleProductIds Int[]
}
