generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id            Int             @id @default(autoincrement())
  date          DateTime
  city          String
  name          String
  type          String
  description   String
  card_products card_products[]
}

model product_bundle {
  id         Int   @id @default(autoincrement())
  productids Int[]
}

model card {
  id            Int             @id @default(autoincrement())
  user          String
  card_products card_products[]
}

model card_products {
  card      card     @relation(fields: [cardId], references: [id])
  cardId    Int
  products  products @relation(fields: [productId], references: [id])
  productId Int

  @@id([cardId, productId])
}
